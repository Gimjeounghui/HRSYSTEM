<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<settings>
	<!-- 자동으로 카멜케이스 규칙으로 변환 -->
	<setting name="mapUnderscoreToCamelCase" value="true" />
	 </settings>

	<!-- VO 세팅 -->
    <typeAliases>

		<!--  employeeVO 별칭 -->
		<typeAlias alias="employeeVO" type="com.gjh.hrsystem.employee.vo.EmployeeVO"/>

		<!-- departmentVO 별칭 -->
		<typeAlias alias="departmentVO" type="com.gjh.hrsystem.department.vo.DepartmentVO"/>

		<!-- branchVO 별칭 -->
		<typeAlias alias="branchVO" type="com.gjh.hrsystem.branch.vo.BranchVO"/>

    </typeAliases>

</configuration>